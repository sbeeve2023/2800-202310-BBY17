



<div class="mx-auto max-w-3xl border rounded-lg p-8 flex flex-col items-center8 bg-beige-50">
  <!-- Recipe Title and Subtitle -->
  <div class="mb-4">
    <h1 class="text-3xl font-bold"><%= name %></h1>
    <div class="border-b-2 my-4"></div>
    <p class="text-gray-600 mb-2"><strong>Review:</strong> 4.5/5</p>
    <p class="text-gray-600 mb-2"><strong>Prep/Cook Time:</strong> <%= time%></p>
    <p class="text-gray-600 mb-2"><strong>Serving Size:</strong> <%= servings %> servings</p>
    <div class="border-b-2 my-4"></div>
  </div>
  
  
  
    <!-- Recipe tags -->
  <div class="flex flex-wrap mb-4">
    <%for (var i = 0; i < restrictions.length; i++) {%>
      <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">#<%=restrictions[i]%></span>
    <% } %>
      <!-- Add more tags as needed -->
  </div>


  <!-- Recipe Image -->
  <img class="mx-auto mb-8 max-w-full md:max-w-md lg:max-w-lg xl:max-w-xl" src="/public/chorizo-mozarella-gnocchi-bake-cropped-9ab73a3.jpg" alt="Recipe" class="mb-8">

  <!-- Box 2: Ingredients -->
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4">Ingredients</h2>
    <ul>
        <% for (var i = 0; i < ingredients.length; i++) { %>
        <li class="mb-2"><%= ingredients[i] %></li>
        <% }%>
    </ul>
  </div>

  <!-- Box 3: Instructions -->
  <div>
    <h2 class="text-xl font-bold mb-4">Instructions</h2>
        <% for (var j = 0; j < steps.length; j++) { %>
      <p class="mb-4"><strong><%= j+1 %> </strong><%= steps[j] %></p>
      <% } %>
  </div>
</div>







