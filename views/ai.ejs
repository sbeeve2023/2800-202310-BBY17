<%- include('templates/header') %>


<div class="mx-auto max-w-3xl border rounded-lg p-8 flex flex-col items-center8 bg-beige-50">
  <!-- Recipe Title and Subtitle -->
  <div class="mb-4">
    <h1 class="text-3xl font-bold"><%= name %></h1>
    <div class="border-b-2 my-4"></div>
    <p class="text-gray-600 mb-2"><strong>Review:</strong> 4.5/5</p>

    <div class="border-b-2 my-4"></div>
  </div>
  
  
  
    <!-- Recipe tags -->
  <div class="flex flex-wrap mb-4">
      <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">#Vegetarian</span>
      <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">#Healthy</span>
      <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">#LowCarb</span>
      <!-- Add more tags as needed -->
  </div>


  <!-- Recipe Image -->
  <img class="mx-auto mb-8 max-w-full md:max-w-md lg:max-w-lg xl:max-w-xl" src="/public/chorizo-mozarella-gnocchi-bake-cropped-9ab73a3.jpg" alt="Recipe" class="mb-8">

  <!-- Box 1: Needed Tools and Dietary Restrictions -->
  <div class="flex flex-col md:flex-row mb-8">
    <div class="md:w-1/2 mr-8 border rounded-lg p-4 bg-beige-100 mb-4">
      <h2 class="text-xl font-bold mb-4">Needed Tools</h2>
      <div class="flex flex-wrap">
        <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">Stove</span>
        <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">Oven</span>
        <span class="text-sm bg-gray-200 text-gray-700 px-2 py-1 rounded-full mr-2 mb-2">Blender</span>
      </div>
    </div>
    <div class="md:w-1/2 border rounded-lg p-4 bg-beige-100 mb-4">
      <h2 class="text-xl font-bold mb-4">Search Terms</h2>
    </div>
  </div>
  


  <!-- Box 2: Ingredients -->
  <div class="mb-8">
    <h2 class="text-xl font-bold mb-4">Ingredients</h2>
    <ul>
        <% for (var i = 0; i < ingredients.length; i++) { %>
        <li class="mb-2"><%= ingredients[i] %></li>
        <% }%>
    </ul>
  </div>

  <!-- Box 3: Instructions -->
  <div>
    <h2 class="text-xl font-bold mb-4">Instructions</h2>
        <% for (var j = 0; j < steps.length; j++) { %>
      <p class="mb-4"><strong><%= j+1 %> </strong><%= steps[j] %></p>
      <% } %>
  </div>
</div>




<%- include('templates/footer') %>