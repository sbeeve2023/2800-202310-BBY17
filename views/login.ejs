<%- include('templates/header') %>

<section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md mt-20">
  <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white justify-center">Log In</h2>
  
  <form action="/login-submit" method="post">
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
          <div>
              <label class="text-gray-700" for="username">Username</label>
              <input id="username" name="username" type="text" placeholder="Username" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring">
          </div>
          <div>
              <label class="text-gray-700" for="password">Password</label>
              <input id="password" type="password" name="password" placeholder="Password" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-500 dark:focus:border-blue-500 focus:outline-none focus:ring">
          </div>
      </div>

      <p class="text-xs italic text-red-500">
        <%if(error){%>
          Username/password combo is incorrect
        <%}%>
      </p>

      <div class="flex justify-center mt-6">
          <button type="submit" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Log In</button>
      </div>
  </form>
</section>




<%- include('templates/footer') %>
