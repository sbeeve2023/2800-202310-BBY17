    <h3 class="text-4xl font-medium text-gray-700">Recipes</h3>
    <!--Recipe List-->
    <div class="p-6 space-y-6 flex flex-row flex-wrap justify-around overflow-y-scroll">
    <% for (let i=0; i < recipes.length; i++) { %>
        <%var recipe = recipes[i] %>
        <%- include('templates/recipe-card', {recipe: recipe, time: times[i]}) -%>
    <% }
} %>
</div>

