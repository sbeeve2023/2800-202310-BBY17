<%- include('templates/header') %>

<section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md mt-20">
  <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white justify-center">Change Password</h2>
  
  <form action="/change-password-submit" method="post">
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
          <div>
            <label class="text-gray-700" for="email">email</label>
            <input type="text" name="email" placeholder="Email" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
            <p class="text-xs italic text-red-500">
              <%if(error == "email-invalid"){%>
                Email is invalid
              <%}%>
            </p>
          </div>

          <div>
              <label class="text-gray-700" for="username">Old Password</label>
              <input type="password" name="oldPassword" placeholder="Old Password" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
              <p class="text-xs italic text-red-500">
                <%if(error == "password-incorrect"){%>
                  Incorrect Password
                  <%}%>
              </p>          
          </div>
          <div>
              <label class="text-gray-700" for="password">New Password</label>
              <input type="password" name="newPassword" placeholder="New Password" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 blue-500 focus:outline-none focus:ring">
              <p class="text-xs italic text-red-500">
                <%if(error == "password-same"){%>
                  New password cannot match old password.
                <%}%>
              </p>  
          </div>
          <div>
            <label class="text-gray-700" for="password">Confirm new Password</label>
            <input type="password" name="newPasswordConfirm" placeholder="Confirm New Password" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 blue-500 focus:outline-none focus:ring">
            <p class="text-xs italic text-red-500">
            <%if(error == "password-mismatch"){%>
              New password does not match.
              <%}%>
            </p>  
          </div>
      </div>

      <div class="flex justify-center mt-6">
          <button type="submit" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Confirm</button>
      </div>
  </form>
</section>


<%- include('templates/footer') %>