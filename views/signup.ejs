<%- include('templates/header') %>

<section class="max-w-4xl p-6 mx-auto bg-mmfo border border-mmpr rounded-md shadow-md mt-20 mb-4">
  <h2 class="text-lg font-semibold text-mmpr capitalize justify-center">Create your Account</h2>
  
  <form action="/signup-submit" method="post">
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
          <div>
              <label class="text-mmpr" for="firstname">First Name <span class="text-red-600 italic text-sm" >(*required)</span></label>
              <input id="firstname" name="firstname" type="text" placeholder="First Name" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
          </div>
          <div>
            <label class="text-mmpr" for="firstname">Last Name <span class="text-red-600 italic text-sm" >(*required)</span></label>
            <input id="lastname" name="lastname" type="text" placeholder="Last Name" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
          </div>
          <div>
              <label class="text-mmpr" for="username">Username <span class="text-red-600 italic text-sm" >(*required)</span></label>
              <input id="username" name="username" type="text" placeholder="Username" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
              <p class="text-xs italic text-red-500 warning-transition">
                <%if(error == "username-taken"){%>
                  Username already in use
                <%}%>
              </p>
          </div>

          <div>
              <label class="text-mmpr" for="emailAddress">Email Address <span class="text-red-600 italic text-sm" >(*required)</span></label>
              <input id="emailAddress" name="email" type="email" placeholder="email" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 ocus:outline-none focus:ring">
              <p class="text-xs italic text-red-500 warning-transition">
                <%if(error == "email-taken"){%>
                  Email has already been used
                <%}%>
              </p>
          </div>

          <div>
              <label class="text-mmpr" for="password">Password <span class="text-red-600 italic text-sm" >(*required)</span></label>
              <input id="password" type="password" name="password" required placeholder="Password" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
          </div>

          <div>
              <label class="text-mmpr" for="passwordConfirm">Confirm Password <span class="text-red-600 italic text-sm" >(*required)</span></label>
              <input id="passwordConfirm" name="passwordConfirm" type="password" required placeholder="Confirm password" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
              <p class="text-xs italic text-red-500 warning-transition">
                <%if(error == "passwords-dont-match"){%>
                    Passwords do not match
                <%}%>
              </p>
          </div>
      </div>

      <div class="flex justify-center mt-6">
          <button type="submit" class="px-6 py-2 leading-5 text-mmfo transition-colors duration-200 transform bg-mmpr rounded-md hover:bg-mmse focus:outline-none focus:bg-mmth">Create Account</button>
      </div>
  </form>
</section>


<%- include('templates/footer') %>
