<%- include('templates/header') %>

<section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md mt-20">
  <h2 class="text-lg font-semibold text-gray-700 capitalize dark:text-white justify-center">Create your Account</h2>
  
  <form action="/signup-submit" method="post">
      <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
          <div>
              <label class="text-gray-700" for="firstname">First Name</label>
              <input id="firstname" name="firstname" type="text" placeholder="First Name" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
          </div>
          <div>
            <label class="text-gray-700" for="firstname">Last Name</label>
            <input id="lastname" name="lastname" type="text" placeholder="Last Name" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
          </div>
          <div>
              <label class="text-gra    y-700" for="username">Username</label>
              <input id="username" name="username" type="text" placeholder="Username" required class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
              <p class="text-xs italic text-red-500">
                <%if(error == "username-taken"){%>
                  Username already in use
                <%}%>
              </p>
          </div>

          <div>
              <label class="text-gray-700" for="emailAddress">Email Address</label>
              <input id="emailAddress" name="email" type="email" placeholder="email" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 ocus:outline-none focus:ring">
              <p class="text-xs italic text-red-500">
                <%if(error == "email-taken"){%>
                  Email has already been used
                <%}%>
              </p>
          </div>

          <div>
              <label class="text-gray-700" for="password">Password</label>
              <input id="password" type="password" name="password" placeholder="Password" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
          </div>

          <div>
              <label class="text-gray-700" for="passwordConfirm">Confirm Password</label>
              <input id="passwordConfirm" name="passwordConfirm" type="password" placeholder="Confirm password" class="block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-300 rounded-md focus:border-blue-500 focus:outline-none focus:ring">
              <p class="text-xs italic text-red-500">
                <%if(error == "passwords-dont-match"){%>
                    Passwords do not match
                <%}%>
              </p>
          </div>
      </div>

      <div class="flex justify-center mt-6">
          <button type="submit" class="px-6 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Create Account</button>
      </div>
  </form>
</section>


<%- include('templates/footer') %>
